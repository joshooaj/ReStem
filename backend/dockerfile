FROM python:3.11-slim

WORKDIR /app

# Install system dependencies first (least likely to change)
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && mkdir -p ./completed ./uploads ./temp ./pip-cache

# Copy only requirements.txt first (changes less frequently than source code)
COPY requirements.txt ./

# Install Python dependencies (this layer will be cached unless requirements.txt changes)
RUN pip install --no-cache-dir pip setuptools wheel

# Copy entrypoint and source code last (changes most frequently)
COPY entrypoint.sh ./
COPY main.py database.py models.py auth.py ./

RUN chmod +x /app/entrypoint.sh

ENTRYPOINT ["/app/entrypoint.sh"]
EXPOSE 80