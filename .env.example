# MuxMinus Environment Configuration
# Copy this file to .env and update the values for your environment.

# =============================================================================
# Security
# =============================================================================

# Django secret key - CHANGE THIS IN PRODUCTION!
# Generate one with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me-in-production

# Comma-separated list of allowed hostnames
# Add your domain name here for production (e.g., muxminus.example.com,www.muxminus.example.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# API key for internal backend communication (optional)
BACKEND_API_KEY=

# =============================================================================
# Database
# =============================================================================

# PostgreSQL password
POSTGRES_PASSWORD=postgres

# =============================================================================
# Demucs / Audio Processing
# =============================================================================

# Device for Demucs processing: cpu or cuda
# Use 'cuda' if you have an NVIDIA GPU with CUDA support
DEMUCS_DEVICE=cpu

# Maximum number of concurrent separation jobs
MAX_CONCURRENT_JOBS=2

# =============================================================================
# Square Payments
# =============================================================================

# Get these from https://developer.squareup.com/apps
# Square Access Token (use sandbox token for testing)
SQUARE_ACCESS_TOKEN=

# Square Application ID (for Web Payments SDK)
SQUARE_APPLICATION_ID=

# Square Location ID (find in Square Dashboard -> Locations)
SQUARE_LOCATION_ID=

# Environment: 'sandbox' for testing, 'production' for live payments
SQUARE_ENVIRONMENT=sandbox

# =============================================================================
# Host Configuration
# =============================================================================

# Allowed hosts for Django
ALLOWED_HOSTS=muxminus.example.com,www.muxminus.example.com,localhost,127.0.0.1